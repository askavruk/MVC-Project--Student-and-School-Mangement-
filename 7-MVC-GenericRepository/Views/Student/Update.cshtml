@model StudentsWithSchoolsWM

@{
    ViewData["Title"] = "Update Student";
}

 <partial name="_ValidationScriptsPartial"/>

 <div asp-validation-summary="All">

 </div>


<h1>Update Student</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
                
                <input asp-for="Student.Id" class="form-control" style="visibility: hidden" readonly/>
            
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label"></label>
                <input asp-for="Student.Name" class="form-control"/><br />
                <span asp-validation-for="Student.Name"></span><br />
            </div>
            <div class="form-group">
                <label asp-for="Student.Class" class="control-label"></label>
                <input asp-for="Student.Class" class="form-control"/>
            </div>
            <select asp-for="Student.SchoolID" class="form-control">
                @foreach(var item in Model.Schools)
                {
                    <option value="@item.Id">
                        @item.Name
                    </option>
                }
            </select>
            <div class="form-group">
                <br />
                <input type="submit" value="Update" class="btn btn-primary " />
            </div>
        </form>
    </div>
</div>

<div style="margin-bottom:5px">
    <a asp-action="StudentList" class="btn btn-outline-info">Back To List</a>
</div>


@if(ViewBag.Message!= null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}
