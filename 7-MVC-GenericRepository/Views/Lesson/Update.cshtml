@model LessonVM

@{
    ViewData["Title"] = "Update Lesson";
}

 <partial name="_ValidationScriptsPartial"/>

 <div asp-validation-summary="All">

 </div>


<h1>Update Lesson</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
                
                <input asp-for="Id" class="form-control" style="visibility: hidden" readonly/>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/><br />
                <span asp-validation-for="Name"></span><br />
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Update" class="btn btn-primary " />
            </div>
        </form>
    </div>
</div>

<div style="margin-bottom:5px">
    <a asp-action="LessonList" class="btn btn-outline-info">Back To List</a>
</div>


@if(ViewBag.Message!= null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}
